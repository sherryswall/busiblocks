          <rollovertarget >Hi Ted</rollovertarget>
          </rollover>
          <rollover >
          <rolloverobject >Ted</rolloverobject>
          <rollovertarget >Hi Nancy</rollovertarget>
          </rollover>
          <rollover >
          <rolloverobject >Ted</rolloverobject>
          <rollovertarget >How are you today?</rollovertarget>
          </rollover>
          <rollover >
          <rolloverobject >Nancy</rolloverobject>
          <rollovertarget >Great, how are you? How is work going?</rollovertarget>
          </rollover>
          <rollover >
          <rolloverobject >Ted</rolloverobject>
          <rollovertarget >I'm doing well! Work is busy, but it always is. You should come around for dinner one night.</rollovertarget>
          </rollover>
